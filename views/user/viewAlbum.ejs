<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User / view Album</title>
    <style>
     /* Base Styles */
body {
    font-family: 'JetBrains Mono', monospace;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4; /* Light background color */
    color: #333; /* Dark text color */
}

/* Container for Albums */
.albums-container {
    
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); /* Smaller card size */
    gap: 15px; /* Spacing between cards */
    padding: 20px;
    max-width: 1200px;
    margin: 0 auto;
}

/* Album Card */
.album-card {
    background-color: #fff; /* White background for cards */
    border-radius: 10px;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s; /* Smooth hover effect */
    text-align: center;
    padding: 10px;
}

/* Hover Effect for Album Card */
.album-card:hover {
    transform: translateY(-3px); /* Slight lift on hover */
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15); /* Deeper shadow on hover */
}

/* Album Cover Image */
.album-card img {
    width: 100%;
    height: auto;
    border-radius: 10px;
    margin-bottom: 10px;
}

/* Album Title */
.album-card h3 {
    font-size: 1.1em;
    margin: 8px 0;
    color: #333;
}

/* Artist Name */
.album-card p.artist {
    font-size: 0.9em;
    margin: 5px 0;
    color: #008080; /* Teal color for artist name */
    font-weight: bold; /* Bold artist name */
}

/* Short Date */
.album-card p.date {
    font-size: 0.8em;
    color: #888; /* Light gray for date */
    margin: 5px 0;
}

/* Category */
.album-card p.category {
    font-size: 0.85em;
    margin: 5px 0;
    color: #555;
}

/* View Album Button */
.album-card .button {
    display: inline-block;
    margin-top: 10px;
    padding: 8px 16px;
    background-color: #008080; /* Teal color */
    color: #fff;
    border: none;
    border-radius: 5px;
    text-decoration: none;
    font-size: 0.85em;
    transition: background-color 0.3s; /* Smooth color transition */
}

/* Hover Effect for Button */
.album-card .button:hover {
    background-color: #005f5f; /* Darker teal on hover */
}

/* Responsive Adjustments */
@media (max-width: 768px) {
    .albums-container {
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr)); /* Adjust grid for smaller screens */
    }

    .album-card {
        padding: 8px;
    }

    .album-card h3 {
        font-size: 1em;
    }

    .album-card p {
        font-size: 0.75em;
    }

    .album-card .button {
        padding: 6px 12px;
        font-size: 0.75em;
    }
}

    </style>
</head>

<body class="jb-mono">
    <div class="albums-container">
        <% if (allAlbums && allAlbums.length> 0) { %>
            <% allAlbums.forEach(function(album) { %>

                <div class="album-card">
                    <img src="/images/thumbnail.png" alt="<%= album.title %> Cover">

                    <h3>
                        <%= album.title %>
                    </h3>
                    <p>
                        <%= album.artist %>
                    </p>
                    <p><%= album.formattedDate %></p>

                    <p>
                        <%= album.category %>
                    </p>

                    <a href="/admin/albums/viewAlbum/<%= album.album_id %>" class="button"> View Album</a>
                </div>

                <% }); %>
                    <% } else { %>
                        <p>No albums found.</p>
                        <% } %>
    </div>
</body>

</html>